@model IEnumerable<InstaApplication.Models.Produits>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] = "Index"</title>
    <link rel="stylesheet" href="~/css/Styles.css" asp-append-version="true" />
</head>

<div class="titre">Affiche la liste des clients</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td class="actions">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-edit">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-detail">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Create">Ajouter nouveau client</a>
</p>
